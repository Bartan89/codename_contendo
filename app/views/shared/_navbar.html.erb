
<div class="navbar">
  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
    <%= link_to "videos", class: "navbar-brand" do %>
      <%= image_tag "logo.png" %>
      <% end %>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>


    <div class="lead collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <% if user_signed_in? %>
          <li class="nav-item">
            <li class="nav-item" id="online">⬤</li>
            <% user = current_user.email %>
            <%= link_to "#{user} |", root_path, class: "nav-link" %>
          </li>
          <li class="nav-item active">

          </li>
          <li class="nav-item active">
            <%= link_to "Videos", videos_path, class: "nav-link" %>
          </li>
           <li class="nav-item active">
            <%= link_to "Formats", formats_path, class: "nav-link" %>
          </li>
          <li class="nav-item active">
            <%= link_to "Log out", destroy_user_session_path, method: :delete,  class: "nav-link"%>
          </li>
           <% if current_user.videos_as_shepherd.count != 0 %>
           <li class="nav-item-end">
            <%= link_to "shepherd dashboard",  dashboard_path(current_user.id), class: "btn btn-outline-secondary" %>
          </li>
           <li class="nav-item-end">
            <%= link_to "My videos / translations", inbox_path(current_user.id), class: "btn btn-outline-secondary" %>
          </li>
          <% elsif current_user.videos.count != 0 && current_user.translations.count == 0 %>
           <li class="nav-item-end">
            <%= link_to "My videos", inbox_path(current_user.id), class: "btn btn-outline-secondary" %>
          </li>
          <% elsif current_user.videos.count != 0 || current_user.translations.count != 0 %>
           <li class="nav-item-end">
            <%= link_to "My videos / translations", inbox_path(current_user.id), class: "btn btn-outline-secondary" %>
          </li>


          <% end %>
          <li class="nav-item-end">
            <%= link_to "add a video", new_video_path, class: "btn btn-outline-secondary"%>
          </li>
        <% else %>
            <li class="nav-item" id="offline">⬤</li>
            <li class="nav-link">no user active</li>

          <li>
            <%= link_to "Login", new_user_session_path, class: "btn btn-primary", id: "login-button"%>
          </li>
          <li>
            <%= link_to "< Or sign up here >", new_user_registration_path, class: "nav-link"%>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>


