<div class="container">
    <% @videos.each do |video| %>
      <div class="card" style="width: 29rem;">
        <div class="card-body">
          <%= link_to video_path(video) do %>
            <h5><%="#{video.name}"%></h5>
            <% end %>
             <iframe src="<%=video.video_path%>"
              allowfullscreen="" width="420" height="235"></iframe>

        <% if !video.translations.first %>
          <p class="btn btn-outline-secondary">awaiting transcript></p>
        <% elsif video.translations.count == 1%>
          <p>Be the first to add a translation</p>
        <% else %>
          <p><%="#{video.translations.count-1} translation#{video.translations.count-1 == 1 ? nil : "s"} available"%></p>
        <% end %>
      </div>
    </div>
  <% end  %>
</div>



