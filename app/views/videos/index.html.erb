<div class="p-2 mb-2 bg-primary text-white">   â“˜ In beta all users <strong>can</strong> delete any project, be careful.</div>


<div class="container">
    <% @videos.each do |video| %>
      <div class="card" style="width: 29rem;">
        <div class="card-body">
          <%= link_to video_path(video) do %>
            <h5><%="> #{video.name}"%></h5>
            <% end %>
        <%= link_to "Delete", video_path(video),
        class: "text-muted",
        method: :delete,
        data: { confirm: "Are you sure?" } %>
             <iframe src="<%=video.video_path%>"
              allowfullscreen="" width="420" height="235"></iframe>

        <% if !video.translations.first %>
          <%= link_to "awaiting transcript", new_video_translation_path(video), class: "btn btn-outline-secondary"%>
          <% else %>
          <%= link_to "#{video.translations.count-1} translations available", new_video_translation_path(video), class: "btn btn-outline-secondary"%>
          <% end %>
       <!--  <%= link_to "add translation", new_video_translation_path(video)%> -->
      </div>
    </div>
  <% end  %>
</div>



